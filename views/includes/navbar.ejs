  .btn-search {
    background-color: rgb(254, 66, 77);
    color: white;
    /* width: 130px; */
    border-radius: 25px;
    padding: 0rem 1rem 0rem 1rem;
  }
  .btn-search:hover {
    background-color: rgb(254, 66, 77);
