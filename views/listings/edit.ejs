<% layout("/layouts/boilerplate")%>
<body>
  <form
    method="post"
    action="/listings/<%=listing._id%>?_method=PUT"
    class="needs-validation"
    novalidate
    enctype="multipart/form-data"
  >
    <div class="row">
      <div class="col-8 offset-2">
        <h3 class="mt-3 mb-3">Edit Details</h3>
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input
            type="text"
            class="form-control"
            name="list[title]"
            value="<%=listing.title%>"
            required
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea name="list[description]" class="form-control" required>
    <%= listing.description%></textarea
          >
        </div>
        <div class="mb-3">
          <p>Original Image</p>

          <img src="<%=changedUrl%>" alt="loading" />
        </div>
        <div class="mb-3">
          <label class="form-label" for="image">Image</label>
          <input type="file" class="form-control" name="list[image]" />
        </div>
        <div class="row">
          <div class="col-md-4">
            <div class="mb-3">
              <label class="form-label" for="price">Price</label>
              <input
                type="number"
                class="form-control"
                name="list[price]"
                value="<%= listing.price  %>"
                required
              />
            </div>
          </div>
          <div class="col-md-8">
            <div class="mb-3">
              <label class="form-label" for="country">Country</label>
              <input
                type="text"
                class="form-control"
                name="list[country]"
                value="<%= listing.country  %>"
                required
              />
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="location">Location</label>

          <input
            type="text"
            class="form-control"
            name="list[location]"
            value="<%= listing.location  %>"
            required
          />
        </div>

        <button class="btn btn-dark mt-3 mb-3 edit-btn">submit</button>
      </div>
    </div>
  </form>
</body>
