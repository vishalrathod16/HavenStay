<%- layout("/layouts/boilerplate") %>

<div id="filters">
  <div class="filter">
    <form action="/listings/filter">
      <input type="hidden" name="filters" value="room" />
      <button>
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
      </button>
    </form>
  </div>
  <div class="filter">
    <form action="/listings/filter">
      <input type="hidden" name="filters" value="city" />
      <button>
        <i class="fa-solid fa-mountain-city"></i>
        <p>Iconic Cities</p>
      </button>
    </form>
  </div>
  <div class="filter">
    <form action="/listings/filter">
      <input type="hidden" name="filters" value="mountain" />
      <button>
        <i class="fa-solid fa-mountain-sun"></i>
        <p>Hilly Areas</p>
      </button>
    </form>
  </div>
  <div class="filter">
    <form action="/listings/filter">
      <input type="hidden" name="filters" value="pool" />
      <button>
        <i class="fa-solid fa-person-swimming"></i>
        <p>Pools</p>
      </button>
    </form>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <%for(let list of allListings){ %>
  <a class="listing-link" href="/listings/<%=list._id%>">
    <div class="card col listing-card">
      <div class="card-img-overlay"></div>
      <img
        src="<%=list.image.url  %>"
        class="card-img-top"
        alt="ImageLoading"
        style="height: 20rem"
      />
      <div class="card-body">
        <p class="card-text"><b><%=list.title%></b></p>

        <% if (list.price) { %> &#8377; <%= list.price.toLocaleString("en-IN")
        %> / night <% } else { %> Price not available <% } %>
      </div>
    </div>
  </a>

  <% }%>
</div>
